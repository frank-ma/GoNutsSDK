<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="330dp"
        android:background="@drawable/log_bg_02"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:tint="@color/color_02b6bc"
                android:visibility="invisible"
                android:src="@drawable/ic_back"/>
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/color_02b6bc"
                android:src="@drawable/ic_close"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/nuts_logo"
                android:visibility="gone"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Account"
                android:drawableLeft="@drawable/ic_account"
                android:inputType="text"
                android:text=""
                android:drawablePadding="5dp"
                android:textColorHint="@color/color_gray"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transaction"
                    android:hint="Password"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:inputType="textPassword"
                    android:text=""
                    android:drawablePadding="5dp"
                    android:textColorHint="@color/color_gray"
                    android:textColor="@color/black" />

                <ToggleButton
                    android:id="@+id/pwd_toggle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/eyes_open"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray"/>

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="New password:"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_pwd"
                android:drawablePadding="5dp"
                android:visibility="visible"
                android:text=""
                android:textColor="@color/black" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_reset_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:text="Forgot password"
            android:textColor="@color/blue"
            android:textStyle="italic"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sign in"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/select"
            style="@style/customButton"/>

        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:text=" Create an account"
            android:textColor="@color/blue" />

    </LinearLayout>


</LinearLayout>