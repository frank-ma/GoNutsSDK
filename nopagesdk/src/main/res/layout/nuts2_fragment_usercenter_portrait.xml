<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="512dp"
        android:orientation="vertical"
        android:background="@drawable/usercenter_bg">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:src="@drawable/button_close_white" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_bg"
            android:padding="3dp"
            android:src="@drawable/usercenter_guest" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:maxWidth="300dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:layout_marginTop="9dp"
            android:layout_gravity="center_horizontal"
            android:maxWidth="300dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/nothing"/>

            <com.nutsplay.nopagesdk.view.shadow.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:gravity="center"
                app:blurRadius="10dp"
                android:visibility="gone"
                app:shadowColor="@color/color_5fdbb9"
                app:shadowRadius="15dp"
                app:xOffset="0dp"
                app:yOffset="8px">

                <TextView
                    android:id="@+id/tv_customer_service"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_button_green"
                    android:drawableLeft="@drawable/icon_customer_service"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:drawablePadding="37dp"
                    android:text="Customer Service"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </com.nutsplay.nopagesdk.view.shadow.ShadowLayout>

            <com.nutsplay.nopagesdk.view.shadow.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:blurRadius="10dp"
                app:shadowColor="@color/color_398FFF"
                app:shadowRadius="15dp"
                app:xOffset="0dp"
                app:yOffset="8px">

                <TextView
                    android:id="@+id/tv_bind_fb"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_button_facebook"
                    android:drawableLeft="@drawable/icon_facebook"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="37dp"
                    android:text="Bind Facebook"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </com.nutsplay.nopagesdk.view.shadow.ShadowLayout>


            <com.nutsplay.nopagesdk.view.shadow.ShadowLayout
                android:id="@+id/layout_bind_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                app:blurRadius="10dp"
                app:shadowColor="@color/color_8B9EFF"
                app:shadowRadius="15dp"
                android:visibility="gone"
                app:xOffset="0dp"
                app:yOffset="4dp">

                <TextView
                    android:id="@+id/tv_bind_email"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_button_bluesky"
                    android:drawableLeft="@drawable/icon_email"
                    android:drawablePadding="37dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:text="Bind Email"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


            </com.nutsplay.nopagesdk.view.shadow.ShadowLayout>

            <com.nutsplay.nopagesdk.view.shadow.ShadowLayout
                android:id="@+id/layout_reset_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                app:blurRadius="10dp"
                app:shadowColor="@color/color_FF6E73"
                app:shadowRadius="15dp"
                android:visibility="visible"
                app:xOffset="0dp"
                app:yOffset="4dp">

                <TextView
                    android:id="@+id/tv_reset_pwd"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_button_orange"
                    android:drawableLeft="@drawable/icon_reset_password"
                    android:drawablePadding="37dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:text="Reset Password"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </com.nutsplay.nopagesdk.view.shadow.ShadowLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>