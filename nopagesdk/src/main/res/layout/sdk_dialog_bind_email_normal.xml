<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:background="@drawable/log_bg_02"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_back"
                app:tint="@color/color_02b6bc" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bind Email"
                android:textSize="18sp"
                android:textColor="@color/color_02b6bc"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/transaction"
                    android:hint="Email Address"
                    android:ellipsize="end"
                    android:drawablePadding="5dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColorHint="@color/color_gray"
                    android:drawableLeft="@drawable/ic_email"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/btn_send_verification_code"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/select"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="Send the Code"/>

            </LinearLayout>

            <View
                android:background="#645E5E"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Verification Code"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_pwd"
                android:textColorHint="@color/color_gray"
                android:textColor="@color/black" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/select"
            android:text="Bind"
            style="@style/customButton"/>

    </LinearLayout>


</LinearLayout>